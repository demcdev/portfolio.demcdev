---
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import REACT from "./icons/React.astro";
import JavaScript from "./icons/JavaScript.astro";
import TypeScript from "./icons/TypeScript.astro";
import Angular from "./icons/Angular.astro";
import NodeJS from "./icons/NodeJS.astro";
import Python from "./icons/Python.astro";
import MongoDB from "./icons/MongoDB.astro";
import VTEX from "./icons/Vtex.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-[#192F5A] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#192F5A] text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#192F5A] text-white",
    icon: JavaScript,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#192F5A] text-white",
    icon: TypeScript,
  },
  REACT: {
    name: "React.js",
    class: "bg-[#192F5A] text-white",
    icon: REACT,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#192F5A] text-white",
    icon: Angular,
  },
  VTEX: {
    name: "Vtex IO",
    class: "bg-[#192F5A] text-white",
    icon: VTEX,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-[#192F5A] text-white",
    icon: NodeJS,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#192F5A] text-white",
    icon: Python,
  },
  MONGO: {
    name: "MongoDB",
    class: "bg-[#192F5A] text-white",
    icon: MongoDB,
  },
};
const TECNOLOGIES = [
  TAGS.HTML,
  TAGS.CSS,
  TAGS.JAVASCRIPT,
  TAGS.TYPESCRIPT,
  TAGS.REACT,
  TAGS.ANGULAR,
  TAGS.NODEJS,
  TAGS.PYTHON,
  TAGS.MONGO,
];
---

<div>
  <ul class="flex flex-wrap flex-row mb-2 gap-1">
    {
      TECNOLOGIES.map((tag) => (
        <li>
          <span
            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3 `}
          >
            <tag.icon class="size-4" />
            {tag.name}
          </span>
        </li>
      ))
    }
  </ul>
</div>
